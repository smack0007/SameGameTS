{
  "name": "samegamets",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.ts",
  "bin": {
    "samegamets": "app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smack0007/SameGameTS.git"
  },
  "keywords": [
    "nwjs",
    "game"
  ],
  "author": "smack0007",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smack0007/SameGameTS/issues"
  },
  "homepage": "https://github.com/smack0007/SameGameTS#readme",
  "dependencies": {
    "nw": "^0.47.3"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "concurrently": "^5.3.0",
    "cpy-cli": "^3.1.1",
    "rollup": "^2.26.5",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "npm run build-tsc && npm run build-rollup && npm run build-cpy",
    "build-tsc": "tsc --strict --typeRoots node_modules/@types -t es2015 -m es6 --inlineSourceMap --inlineSources src/main.ts",
    "build-rollup": "rollup src/main.js --file dist/app.js --format iife --sourcemap -p rollup-plugin-sourcemaps",
    "build-cpy": "cpy src/nwjs.package.json dist --rename=package.json && cpy **/*.html ../dist --cwd=src --parents && cpy assets/**/* dist --parents",
    "dev": "npm run build-cpy && concurrently -s first -k -n tsc,rollup,nwjs -c blue,red,green \"npm:dev-tsc\" \"npm:dev-rollup\" \"npm:dev-nwjs\"",
    "dev-tsc": "npm run build-tsc -- --watch",
    "dev-rollup": "npm run build-rollup -- --watch",
    "dev-nwjs": "nw dist",
    "test": "echo 'Test'"
  }
}
