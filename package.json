{
  "name": "samegamets",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.ts",
  "bin": {
    "samegamets": "app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smack0007/SameGameTS.git"
  },
  "keywords": [
    "nwjs",
    "game"
  ],
  "author": "smack0007",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smack0007/SameGameTS/issues"
  },
  "homepage": "https://github.com/smack0007/SameGameTS#readme",
  "dependencies": {
    "nw": "^0.47.3"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "concurrently": "^5.3.0",
    "rollup": "^2.26.5",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "npm run build-tsc && npm run build-rollup && npm run build-pack",
    "build-tsc": "tsc --strict --typeRoots node_modules/@types -t es2015 -m es6 --inlineSourceMap --inlineSources src/main.ts",
    "build-rollup": "rollup src/main.js --file bin/app.js --format iife --sourcemap -p rollup-plugin-sourcemaps",
    "build-pack": "tsc --strict --typeRoots node_modules/@types scripts/build.ts && node scripts/build.js",
    "dev": "concurrently -s first -k -n tsc,rollup,nwjs -c red,green,blue \"npm:dev-tsc\" \"npm:dev-rollup\" \"npm:dev-nwjs\"",
    "dev-tsc": "tsc --strict --typeRoots node_modules/@types -t es2015 -m es6 --inlineSourceMap --inlineSources src/main.ts -w",
    "dev-rollup": "rollup src/main.js --file bin/app.js --format iife --sourcemap -p rollup-plugin-sourcemaps --watch",
    "dev-nwjs": "nw bin",
    "test": "echo 'Test'"
  }
}
