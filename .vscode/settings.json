{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/dist": true,
        "**/node_modules": true,
        "build/**/*.js": true,
        "src/**/*.js": true,
    },
    "files.trimTrailingWhitespace": true,
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "typescript.preferences.importModuleSpecifier": "relative",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
}